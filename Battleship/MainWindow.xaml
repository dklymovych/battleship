<Window x:Class="battleship_my.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:battleship_my"
        mc:Ignorable="d"
        Title="Battleships Login" Height="450" Width="800">
    <Grid>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Height="56" Width="170" FontSize="20" Click="loginButton_Click"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Margin="243,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="36" FontSize="22"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="243,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="36" FontSize="22"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="243,68,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="243,165,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="logoutButton" Content="Logout" HorizontalAlignment="Left" Margin="527,307,0,0" VerticalAlignment="Top" Height="56" Width="90" FontSize="18" Click="logoutButton_Click"/>

    </Grid>
</Window>
