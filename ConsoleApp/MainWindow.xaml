<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Your Application" Height="450" Width="800">
    <Grid>
        <Border Background="Black" Margin="10" Padding="10">
            <TextBlock Text="BATTLESHIP" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
        </Border>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Sign in" Style="{StaticResource MaterialDesignRaisedLightButton}" Margin="0,0,0,10"/>
            <Button Content="Sign up" Style="{StaticResource MaterialDesignRaisedLightButton}" Margin="0,0,0,10"/>
            <Button Content="Offline" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
        </StackPanel>
    </Grid>
</Window>