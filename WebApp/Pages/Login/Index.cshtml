@page
@model WebApp.Pages.LoginModel
@{
ViewData["Title"] = "Login page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="header-container">
                <h1>BATTLESHIP</h1>
            </div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Player.Username"></label>
                    <input asp-for="Player.Username" class="form-control form-control-custom"/>
                    <span asp-validation-for="Player.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player.Password"></label>
                    <input asp-for="Player.Password" type="password" class="form-control form-control-custom"/>
                    <span asp-validation-for="Player.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-custom">Sign in</button>
                <p class="text-danger">@Model.ErrorMessage</p>
            </form>
        </div>
    </div>
</div>

<style>
    .header-container {
        background-color: #333; 
        color: white; 
        padding: 1px;
        text-align: center;
        border-radius: 5px;
    }
    .btn-custom {
        background-color: #333; 
        color: white; 
        border: none;
        width: 100%; 
        padding: 10px;
        text-align: center;
        display: inline-block;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
        border-radius: 5px; 
    }
    .btn-custom:hover {
        background-color: #555; 
    }
    .form-control-custom {
        border: 1px solid #ccc; 
        background-color: white !important; 
        color: #333; 
    }
    .form-control-custom:focus {
        border-color: #666;
        box-shadow: none; 
        background-color: white;
    }
</style>
